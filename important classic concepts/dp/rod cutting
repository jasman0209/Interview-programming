#include<iostream>
using namespace std;
int rodcut(int length[],int arr[],int n)
{
    if(n==0) return 0;
    if(n==1) return arr[0];
    int dp[n+1][n+1];
	    for(int i=0;i<=n;i++)
	    {
	        dp[i][0]=0;
	        dp[0][i]=0;
	    }
	    for(int i=1;i<=n;i++)
	    {
	        for(int j=1;j<=n;j++)
	        {
	            if(length[i-1]<=j)
	            {
	                dp[i][j]=max(arr[i-1]+dp[i][j-length[i-1]],dp[i-1][j]);
	            }
	            else
	            {
	                dp[i][j]=dp[i-1][j];
	            }
	        }
	    }
	    return dp[n][n];
}
int main()
 {
	//code
	/*
	
	*/
	int t=1;
	cin>>t;
	while(t--)
	{
	    int n;
	    cin>>n;
	    int arr[n];
	    int length[n];
	    
	    for(int i=0;i<n;i++)
	    {
	        cin>>arr[i];
	        length[i]=i+1;
	    }
	    cout<<rodcut(length,arr,n)<<endl;
	
}
return 0;
}
