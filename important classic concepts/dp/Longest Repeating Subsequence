#include <bits/stdc++.h>
using namespace std;
int longestrepeatingsubseq(string x,string y,int n,int m)
{
    int dp[n+1][m+1];
    memset(dp,0,sizeof(dp));
        for(int i=1;i<=n;i++)
        {
            for(int j=1;j<=m;j++)
            {
                if(i!=j&&x[i-1]==y[j-1]){
                        dp[i][j]=1+dp[i-1][j-1];
                    }
                    else
                    {
                        dp[i][j]=max(dp[i-1][j],dp[i][j-1]);
                    }
                //cout<<dp[i][j]<<" ";
            }
            //cout<<endl;
        }
        return dp[n][m];
}
int main() {
	// your code goes here
	int t;
	std::cin >> t;
	while(t--)
	{
	    int n;
	    std::cin >> n;
	    string s;
	    std::cin >> s;
	    cout<<longestrepeatingsubseq(s,s,n,n)<<endl;
	}
	return 0;
}
