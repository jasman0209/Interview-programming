#include <iostream>
using namespace std;
#include<bits/stdc++.h>
using namespace std;
int lcs(string x,string y, int n, int m)
{
    if(n==0 || m==0) return 0;
    int dp[n+1][m+1];
    for(int i=0;i<=n;i++)
    {
        dp[i][0]=0;
    }
    for(int i=0;i<=m;i++)
    {
        dp[0][i]=0;
    }
    
    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=m;j++)
        {
          if(x[i-1]==y[j-1])
            {
                dp[i][j]=1+dp[i-1][j-1];
            }  
            else
            {
               dp[i][j]=max(dp[i-1][j],dp[i][j-1]);
            }
            //cout<<dp[i][j]<<" ";
        }
        //cout<<endl;
    }
    return dp[n][m];
}
int main() {
	// your code goes here
	int t;
	std::cin >> t;
	while(t--)
	{
	    
    	string x;
    	string y;
    	cin>>x>>y;
    	
    	int n=x.length();
    	
    	int m=y.length();//cout<<n<<" "<<m<<endl;
    	cout<<m+n-lcs(x,y,n,m)<<endl;
	}
	return 0;
}
